.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1rpx solid #ededed;
  border-bottom:  1rpx solid #ededed;
  padding-bottom: 10rpx;
}
.post-author-data{
  margin: 10rpx 0 20rpx 10rpx;
  display:flex;
  flex-direction: row;
  align-items: center;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;  
  margin-left: 20rpx;
  color: #333;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-content{
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.post-like-image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.post-like-font{
  margin-right: 40rpx;
}
.post-like{
  font-size: 26rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
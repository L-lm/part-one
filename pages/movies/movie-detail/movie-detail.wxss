/* pages/movies/movie-detail/movie-detail.wxss */
@import "../stars/stars-template.wxss" ;
.container {
  display: flex;
  /* 垂直列 */
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  /* -webkit-filter: blur(20px); */
}

.head-img-hover {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.main-title {
  font-size: 19ppx;
  color: #fff;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
}
.movie-img{
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}
.hightlight-font{
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.plain-font{
  color: #666;
  font-size: 22rpx;
  margin-right: 30rpx;
}
.like {
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
  margin-top: 30rpx;
}
.flex-row{
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.original-title{
  color: #1f3463;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.mark{
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999999;
}
.summmary{
  font-size: 24rpx;
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777777;
}
.hr{
  margin-top: 45rpx;
  height: 1px;
  width: 750rpx;
  background-color: #d9d9d9;
}
.synopsis{
  font-size: 24rpx;
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}
.summary-content{
  margin-top:20rpx;
  line-height: 40rpx;
  margin-right: 40rpx;
  letter-spacing: 1px;

}
.cast{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}
.cast-font{
  color: #999;
  margin-bottom: 40rpx;
}
.cast-imgs{
  white-space: nowrap;
}
.cast-name{
  margin: 10rpx auto 0;
  word-break: break-all;
  font-size: 24rpx;
}
.cast-container{
  display:inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right:40rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal; 

}
.cast-img{
  width: 170rpx;
  height: 210rpx;
}
